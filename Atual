@bot.command(name='ping')
async def ping(ctx):
    """Comando para verificar a lat√™ncia do bot"""
    latency = round(bot.latency * 1000)

    embed = discord.Embed(
        title="üèì Pong!",
        description=f"Lat√™ncia: **{latency}ms**",
        color=discord.Color.blue()
    )

    await ctx.send(embed=embed)
    logger.info(f"Comando ping executado por {ctx.author.name}")

@bot.command(name='tempo')
async def tempo(ctx):
    """Comando para mostrar a hora atual"""
    agora = datetime.now(TZ_SAO_PAULO)
    nome_mes_pt = MESES_PT[agora.month]
    data_formatada = agora.strftime(f'%d de {nome_mes_pt} de %Y')
    hora_formatada = agora.strftime('%H:%M:%S')

    embed = discord.Embed(
        title="üïê Hora Atual",
        description=f"**{data_formatada} √†s {hora_formatada}**",
        color=discord.Color.gold(),
        timestamp=datetime.now(TZ_SAO_PAULO)
    )

    await ctx.send(embed=embed)
    logger.info(f"Comando tempo executado por {ctx.author.name}")

@bot.command(name='minhachamada')
async def minha_chamada(ctx):
    """Comando individual para consultar estat√≠sticas pessoais de calls"""
    try:
        user_id = ctx.author.id
        stats = call_tracker.obter_estatisticas_usuario(user_id)

        if not stats:
            embed = discord.Embed(
                title="üìä Suas Estat√≠sticas de Calls",
                description="Voc√™ ainda n√£o possui hist√≥rico de calls registradas.",
                color=discord.Color.orange()
            )
            embed.set_author(
                name=ctx.author.display_name,
                icon_url=ctx.author.avatar.url if ctx.author.avatar else ctx.author.default_avatar.url
            )
            await ctx.send(embed=embed)
            return

        # Cria embed com estat√≠sticas
        embed = discord.Embed(
            title="üìä Suas Estat√≠sticas de Calls",
            color=discord.Color.blue(),
            timestamp=datetime.now(TZ_SAO_PAULO)
        )

        # Tempo total
        embed.add_field(
            name="‚è±Ô∏è Tempo Total em Calls",
            value=f"**{call_tracker.formatar_tempo(stats['total_segundos'])}**",
            inline=True
        )

        # Quantidade de sess√µes
        embed.add_field(
            name="üéôÔ∏è Total de Sess√µes",
            value=f"**{stats['total_sessoes']}**",
            inline=True
        )

        # M√©dia por sess√£o
        embed.add_field(
            name="üìà M√©dia por Sess√£o",
            value=f"**{call_tracker.formatar_tempo(stats['media_segundos'])}**",
            inline=True
        )

        # Status atual
        tempo_atual = call_tracker.obter_tempo_atual(user_id)
        if tempo_atual:
            embed.add_field(
                name="üîä Status Atual",
                value=f"**Em call agora!**\nTempo da sess√£o atual: **{call_tracker.formatar_tempo(tempo_atual)}**",
                inline=False
            )
            embed.color = discord.Color.green()
        else:
            embed.add_field(
                name="üîá Status Atual",
                value="**N√£o est√° em call no momento**",
                inline=False
            )

        # √öltima call
        if stats['ultima_call']:
            embed.add_field(
                name="üìÖ √öltima Call",
                value=f"**{stats['ultima_call'].strftime('%d/%m/%Y √†s %H:%M')}**",
                inline=True
            )

# Primeira call
        if stats['primeira_call']:
            embed.add_field(
                name="üîπ Primeira Call",
                value=f"**{stats['primeira_call'].strftime('%d/%m/%Y √†s %H:%M')}**",
                inline=True
            )

        # Adiciona autor
        embed.set_author(
            name=f"Relat√≥rio de {ctx.author.display_name}",
            icon_url=ctx.author.avatar.url if ctx.author.avatar else ctx.author.default_avatar.url
        )
        embed.set_footer(text="Sistema de Rastreamento de Calls ‚Ä¢ Atualizado")

        await ctx.send(embed=embed)
        logger.info(f"Comando minhachamada executado por {ctx.author.name}")

    except Exception as e:
        logger.error(f"Erro no comando minhachamada: {e}")
        await ctx.send("‚ùå Ocorreu um erro ao obter suas estat√≠sticas de calls!")

@bot.command(name='rankingchamadas')
async def ranking_chamadas(ctx):
    """Comando para mostrar ranking dos usu√°rios mais ativos em calls"""
    try:
        ranking = call_tracker.obter_ranking(10)

        if not ranking:
            embed = discord.Embed(
                title="üèÜ Ranking de Calls",
                description="Ainda n√£o h√° dados de calls registradas no servidor.",
                color=discord.Color.orange()
            )
            await ctx.send(embed=embed)
            return

        # Cria embed principal
        embed = discord.Embed(
            title="üèÜ Ranking de Calls - Top 10",
            description="Os usu√°rios mais ativos em chamadas de voz do servidor:",
            color=discord.Color.gold(),
            timestamp=datetime.now(TZ_SAO_PAULO)
        )

        # Emojis de medalhas
        medals = ["ü•á", "ü•à", "ü•â"]
        colors = [discord.Color.gold(), discord.Color.from_rgb(192, 192, 192), discord.Color.from_rgb(205, 127, 50)]

        for i, user_data in enumerate(ranking):
            position = i + 1
            medal = medals[i] if i < 3 else f"{position}¬∫"

            # Busca o usu√°rio no servidor
            user = ctx.guild.get_member(user_data['user_id'])
            display_name = user.display_name if user else user_data['user_name']

            # Calcula m√©dia por sess√£o
            media_segundos = user_data['total_segundos'] / user_data['total_sessoes']

            # Formata √∫ltima call
            ultima_call = "N√£o registrada"
            if user_data['ultima_call']:
                ultima_call = user_data['ultima_call'].strftime('%d/%m/%Y √†s %H:%M')

            # Cria campo para cada usu√°rio
            field_value = (
                f"‚è±Ô∏è **Tempo Total:** {call_tracker.formatar_tempo(user_data['total_segundos'])}\n"
                f"üéôÔ∏è **Sess√µes:** {user_data['total_sessoes']}\n"
                f"üìà **M√©dia:** {call_tracker.formatar_tempo(media_segundos)}\n"
                f"üìÖ **√öltima Call:** {ultima_call}"
            )

            embed.add_field(
                name=f"{medal} {display_name}",
                value=field_value,
                inline=True
            )

            # Adiciona separador a cada 3 usu√°rios para melhor visualiza√ß√£o
            if position % 3 == 0 and position < len(ranking):
                embed.add_field(name="\u200b", value="\u200b", inline=False)

        # Muda cor do embed baseado no top 3
        if len(ranking) > 0:
            embed.color = colors[0]  # Ouro para o ranking geral

        embed.set_footer(text=f"Ranking atualizado ‚Ä¢ {len(ranking)} usu√°rios ativos")

        await ctx.send(embed=embed)
        logger.info(f"Comando rankingchamadas executado por {ctx.author.name}")

    except Exception as e:
        logger.error(f"Erro no comando rankingchamadas: {e}")
        await ctx.send("‚ùå Ocorreu um erro ao obter o ranking de calls!")

@bot.command(name='statscall')
async def stats_call(ctx, member: discord.Member = None):
    """Comando para moderadores consultarem estat√≠sticas de qualquer usu√°rio"""
    try:
        # Se n√£o especificar usu√°rio, mostra do pr√≥prio autor
        target_user = member or ctx.author

        # Verifica se o autor tem permiss√£o para ver stats de outros
        if member and not ctx.author.guild_permissions.manage_messages:
            await ctx.send("‚ùå Voc√™ n√£o tem permiss√£o para consultar estat√≠sticas de outros usu√°rios!")
            return

        stats = call_tracker.obter_estatisticas_usuario(target_user.id)

        if not stats:
            embed = discord.Embed(
                title="üìä Estat√≠sticas de Calls",
                description=f"{target_user.display_name} ainda n√£o possui hist√≥rico de calls registradas.",
                color=discord.Color.orange()
            )
            embed.set_author(
                name=target_user.display_name,
                icon_url=target_user.avatar.url if target_user.avatar else target_user.default_avatar.url
            )
            await ctx.send(embed=embed)
            return

        # Cria embed detalhado
        embed = discord.Embed(
            title="üìä Estat√≠sticas Detalhadas de Calls",
            color=discord.Color.purple(),
            timestamp=datetime.now(TZ_SAO_PAULO)
        )

        # Informa√ß√µes principais
        embed.add_field(
            name="‚è±Ô∏è Tempo Total",
            value=f"**{call_tracker.formatar_tempo(stats['total_segundos'])}**",
            inline=True
        )

        embed.add_field(
            name="üéôÔ∏è Sess√µes Totais",
            value=f"**{stats['total_sessoes']}**",
            inline=True
        )

        embed.add_field(
            name="üìà M√©dia/Sess√£o",
            value=f"**{call_tracker.formatar_tempo(stats['media_segundos'])}**",
            inline=True
        )

        # Status atual
        tempo_atual = call_tracker.obter_tempo_atual(target_user.id)
        if tempo_atual:
            canal_info = call_tracker.usuarios_ativos.get(target_user.id, {})
            canal_nome = canal_info.get('canal', 'Canal desconhecido')

            embed.add_field(
                name="üîä Status Atual",
                value=f"**Em call no canal:** {canal_nome}\n**Tempo da sess√£o:** {call_tracker.formatar_tempo(tempo_atual)}",
                inline=False
            )
            embed.color = discord.Color.green()
        else:
            embed.add_field(
                name="üîá Status Atual",
                value="**Offline** - N√£o est√° em call no momento",
                inline=False
            )

        # Hist√≥rico
        if stats['primeira_call']:
            embed.add_field(
                name="üéØ Primeira Call",
                value=f"**{stats['primeira_call'].strftime('%d/%m/%Y √†s %H:%M')}**",
                inline=True
            )

        if stats['ultima_call']:
            embed.add_field(
                name="üìÖ √öltima Call",
                value=f"**{stats['ultima_call'].strftime('%d/%m/%Y √†s %H:%M')}**",
                inline=True
            )

        # √öltima sess√£o detalhada
        if stats['ultima_sessao']:
            canal, entrada, saida, duracao = stats['ultima_sessao']
            entrada_dt = datetime.fromisoformat(entrada)
            saida_dt = datetime.fromisoformat(saida) if saida else None

            if saida_dt:
                embed.add_field(
                    name="üìù √öltima Sess√£o",
                    value=f"**Canal:** {canal}\n**Dura√ß√£o:** {call_tracker.formatar_tempo(duracao)}\n**Data:** {entrada_dt.strftime('%d/%m/%Y √†s %H:%M')}",
                    inline=False
                )

        # Adiciona autor
        embed.set_author(
            name=f"Relat√≥rio de {target_user.display_name}",
            icon_url=target_user.avatar.url if target_user.avatar else target_user.default_avatar.url
        )
        embed.set_footer(text="Sistema Avan√ßado de Rastreamento ‚Ä¢ Consulta Detalhada")

        await ctx.send(embed=embed)
        logger.info(f"Comando statscall executado por {ctx.author.name} para {target_user.name}")

    except Exception as e:
        logger.error(f"Erro no comando statscall: {e}")
        await ctx.send("‚ùå Ocorreu um erro ao obter as estat√≠sticas detalhadas!")

@bot.command(name='topcalls')
async def top_calls(ctx):
    """Comando para mostrar estat√≠sticas gerais do servidor"""
    try:
        ranking = call_tracker.obter_ranking(5)  # Top 5 para vis√£o geral

        if not ranking:
            embed = discord.Embed(
                title="üìä Estat√≠sticas Gerais do Servidor",
                description="Ainda n√£o h√° dados de calls registradas no servidor.",
                color=discord.Color.orange()
            )
            await ctx.send(embed=embed)
            return

        # Calcula estat√≠sticas gerais
        total_segundos_servidor = sum(user['total_segundos'] for user in ranking)
        total_sessoes_servidor = sum(user['total_sessoes'] for user in ranking)
        usuarios_ativos = len([user for user in ranking if user['total_segundos'] > 0])

        # Cria embed
        embed = discord.Embed(
            title="üìä Estat√≠sticas Gerais do Servidor",
            description="Resumo da atividade em calls de voz:",
            color=discord.Color.blue(),
            timestamp=datetime.now(TZ_SAO_PAULO)
        )

        # Estat√≠sticas gerais
        embed.add_field(
            name="‚è±Ô∏è Tempo Total do Servidor",
            value=f"**{call_tracker.formatar_tempo(total_segundos_servidor)}**",
            inline=True
        )

        embed.add_field(
            name="üéôÔ∏è Sess√µes Totais",
            value=f"**{total_sessoes_servidor}**",
            inline=True
        )

        embed.add_field(
            name="üë• Usu√°rios Ativos",
            value=f"**{usuarios_ativos}**",
            inline=True
        )

        # Top 5 usu√°rios
        top_users = ""
        for i, user_data in enumerate(ranking):
            medal = ["ü•á", "ü•à", "ü•â", "4Ô∏è‚É£", "5Ô∏è‚É£"][i]
            user = ctx.guild.get_member(user_data['user_id'])
            display_name = user.display_name if user else user_data['user_name']

            top_users += f"{medal} **{display_name}** - {call_tracker.formatar_tempo(user_data['total_segundos'])}\n"

        embed.add_field(
            name="üèÜ Top 5 Usu√°rios",
            value=top_users,
            inline=False
        )

        # Usu√°rios online em call
        usuarios_online = []
        for user_id, data in call_tracker.usuarios_ativos.items():
            user = ctx.guild.get_member(user_id)
            if user:
                tempo_atual = call_tracker.obter_tempo_atual(user_id)
                usuarios_online.append(f"üîä **{user.display_name}** - {call_tracker.formatar_tempo(tempo_atual)} ({data['canal']})")

        if usuarios_online:
            embed.add_field(
                name="üîä Usu√°rios Online em Call",
                value="\n".join(usuarios_online[:5]),  # M√°ximo 5 para n√£o poluir
                inline=False
            )
        else:
            embed.add_field(
                name="üîá Usu√°rios Online em Call",
                value="Nenhum usu√°rio em call no momento",
                inline=False
            )

        embed.set_footer(text=f"Estat√≠sticas do Servidor ‚Ä¢ {ctx.guild.name}")

        await ctx.send(embed=embed)
        logger.info(f"Comando topcalls executado por {ctx.author.name}")

    except Exception as e:
        logger.error(f"Erro no comando topcalls: {e}")
        await ctx.send("‚ùå Ocorreu um erro ao obter as estat√≠sticas do servidor!")



# ============== COMANDO DE AJUDA INTERATIVO ==============

class HelpSelect(discord.ui.Select):
    """Dropdown para selecionar categorias de ajuda."""
    def __init__(self):
        options = [
            discord.SelectOption(label="Comandos Gerais", description="Comandos para todos os membros.", emoji="üè•"),
            discord.SelectOption(label="Estat√≠sticas de Chamadas", description="Comandos para visualizar tempos e rankings.", emoji="üìä"),
            discord.SelectOption(label="Modera√ß√£o", description="Comandos para a equipe de modera√ß√£o.", emoji="üõ†Ô∏è")
        ]
        super().__init__(placeholder="Selecione uma categoria...", min_values=1, max_values=1, options=options)

    async def callback(self, interaction: discord.Interaction):
        # Obt√©m a categoria selecionada e cria um novo embed
        selected_category = self.values[0]
        embed = discord.Embed(
            title=f"‚öïÔ∏è Categoria: {selected_category} ‚öïÔ∏è",
            color=discord.Color.red(),
            timestamp=datetime.now(TZ_SAO_PAULO)
        )
        embed.set_footer(text=f"Use !help <comando> para mais detalhes sobre um comando espec√≠fico.")

        if selected_category == "Comandos Gerais":
            embed.description = "Comandos essenciais dispon√≠veis para todos os membros."
            embed.add_field(name="`!ping`", value="Verifica a lat√™ncia e o tempo de resposta do bot.", inline=False)
            embed.add_field(name="`!tempo`", value="Mostra a data e hora atuais do servidor.", inline=False)
            embed.add_field(name="`!verificar`", value="Inicia o processo de verifica√ß√£o para obter acesso.", inline=False)
            embed.add_field(name="`!help`", value="Exibe esta mensagem de ajuda interativa.", inline=False)

        elif selected_category == "Estat√≠sticas de Chamadas":
            embed.description = "Comandos para consultar seu tempo em chamada e ver rankings."
            embed.add_field(name="`!minhachamada`", value="Consulta suas estat√≠sticas pessoais de tempo em chamada.", inline=False)
            embed.add_field(name="`!consultar`", value="Consulta seu hist√≥rico completo de tempo em chamadas.", inline=False)
            embed.add_field(name="`!rankingchamadas`", value="Mostra o ranking dos usu√°rios mais ativos em chamadas de voz.", inline=False)
            embed.add_field(name="`!topcalls`", value="Exibe as estat√≠sticas gerais de chamadas do servidor.", inline=False)

        elif selected_category == "Modera√ß√£o":
            embed.description = "Comandos restritos para a equipe de modera√ß√£o para gerenciar o bot."
            embed.add_field(name="`!statscall <usu√°rio>`", value="Consulta as estat√≠sticas de chamada de um usu√°rio espec√≠fico.", inline=False)

        # Edita a mensagem original com o novo embed da categoria
        await interaction.response.edit_message(embed=embed)


class HelpView(discord.ui.View):
    """View que cont√©m o dropdown de ajuda."""
    def __init__(self):
        super().__init__(timeout=180) # O menu expira em 3 minutos
        self.add_item(HelpSelect())


@bot.command(name='help', help="Mostra esta mensagem de ajuda interativa.")
async def help_command(ctx):
    """Mostra uma mensagem de ajuda interativa com um menu de sele√ß√£o."""
    embed = discord.Embed(
        title="‚öïÔ∏è Central de Ajuda do MedBot ‚öïÔ∏è",
        description="Bem-vindo(a) √† central de ajuda!\n\n"
                    "Use o menu suspenso abaixo para navegar pelas categorias de comandos. "
                    "Cada categoria listar√° os comandos dispon√≠veis e suas fun√ß√µes.",
        color=discord.Color.dark_red(),
        timestamp=datetime.now(TZ_SAO_PAULO)
    )
    if ctx.bot.user.avatar:
        embed.set_thumbnail(url=ctx.bot.user.avatar.url)
    embed.set_footer(text="Selecione uma categoria para ver os comandos.")

    view = HelpView()
    await ctx.send(embed=embed, view=view)


# ============== SISTEMA DE VERIFICA√á√ÉO (MANTIDO INTOCADO) ==============

class VerificationModal(discord.ui.Modal, title='Formul√°rio de Verifica√ß√£o'):
    """Modal para coleta de informa√ß√µes de verifica√ß√£o"""

    def __init__(self):
        super().__init__()

        # Campo nome
        self.nome = discord.ui.TextInput(
            label="üìã Nome Completo",
            placeholder="Digite seu nome completo",
            required=True,
            max_length=50
        )
        self.add_item(self.nome)

        # Campo ID
        self.id_usuario = discord.ui.TextInput(
            label="üÜî ID (at√© 5 d√≠gitos)",
            placeholder="Ex: 12345",
            required=True,
            min_length=1,
            max_length=5
        )
        self.add_item(self.id_usuario)

        # Campo telefone
        self.telefone = discord.ui.TextInput(
            label="üìû Telefone",
            placeholder="Ex: 123-456",
            required=True,
            min_length=7,
            max_length=7
        )
        self.add_item(self.telefone)

        # Campo tipo de acesso
        self.tipo_acesso = discord.ui.TextInput(
            label="üè∑Ô∏è Tipo de Acesso",
            placeholder="Digite: Visitante ou M√©dico",
            required=True,
            max_length=15
        )
        self.add_item(self.tipo_acesso)

    async def on_submit(self, interaction: discord.Interaction):
        """Processa o formul√°rio de verifica√ß√£o"""
        try:
            # Valida√ß√µes dos campos
            if not self.id_usuario.value.isdigit():
                await interaction.response.send_message("‚ùå ID deve conter apenas n√∫meros!", ephemeral=True)
                return

            if not self.telefone.value.count('-') == 1:
                await interaction.response.send_message("‚ùå Telefone deve estar no formato XXX-XXX!", ephemeral=True)
                return

            tipo_valido = self.tipo_acesso.value.strip().lower()
            if tipo_valido not in ['visitante', 'm√©dico', 'medico']:
                await interaction.response.send_message("‚ùå Tipo de acesso deve ser 'Visitante' ou 'M√©dico'!", ephemeral=True)
                return

            # Processamento e atribui√ß√£o de cargos
            guild = interaction.guild
            tipo_final = "M√©dico" if tipo_valido in ['m√©dico', 'medico'] else "Visitante"

            cargo_key = "Estagi√°rio" if tipo_final == "M√©dico" else "Visitante/Observador"
            cargo_id = CARGOS_IDS.get(cargo_key)
            cargo = guild.get_role(cargo_id) if cargo_id else None

            if not cargo:
                await interaction.response.send_message(f"‚ùå O cargo '{cargo_key}' n√£o foi encontrado ou configurado. Contate um admin.", ephemeral=True)
                return

            await interaction.user.add_roles(cargo)

            # Altera apelido
            novo_apelido = f"{self.nome.value} | {self.id_usuario.value}"
            await interaction.user.edit(nick=novo_apelido)

            # Mensagem de sucesso bonita com tema vermelho
            embed_sucesso = discord.Embed(
                title="‚öïÔ∏è Verifica√ß√£o Conclu√≠da ‚öïÔ∏è",
                description=f"Bem-vindo(a) ao sistema, **{interaction.user.mention}**!",
                color=discord.Color.red(),
                timestamp=datetime.now(TZ_SAO_PAULO)
            )
            embed_sucesso.set_thumbnail(url=interaction.user.avatar.url if interaction.user.avatar else interaction.user.default_avatar.url)

            embed_sucesso.add_field(
                name="__Informa√ß√µes Registradas__",
                value=f"**Nome:** `{self.nome.value}`\n"
                      f"**ID:** `{self.id_usuario.value}`\n"
                      f"**Telefone:** `{self.telefone.value}`\n"
                      f"**Tipo:** `{tipo_final}`",
                inline=False
            )

            # Adiciona um campo em branco para espa√ßamento
            embed_sucesso.add_field(name="\u200b", value="\u200b", inline=False)

            embed_sucesso.add_field(
                name="__Altera√ß√µes Aplicadas__",
                value=f"**Apelido alterado para:** `{novo_apelido}`\n"
                      f"**Cargo atribu√≠do:** {cargo.mention}",
                inline=False
            )

            embed_sucesso.set_footer(text=f"Sistema de Verifica√ß√£o ‚Ä¢ {interaction.guild.name}")
            await interaction.response.send_message(embed=embed_sucesso, ephemeral=True)
            logger.info(f"Usu√°rio {interaction.user.name} verificado com sucesso.")

            # Envia log para canal de logs se existir (com tema vermelho)
            canal_logs = guild.get_channel(CANAIS_TEXTO.get("logs-de-inscri√ß√£o"))
            if canal_logs:
                log_embed = discord.Embed(
                    title="‚öïÔ∏è Nova Verifica√ß√£o Realizada ‚öïÔ∏è",
                    color=discord.Color.dark_red(),
                    timestamp=datetime.now(TZ_SAO_PAULO)
                )
                log_embed.set_thumbnail(url=interaction.user.avatar.url if interaction.user.avatar else interaction.user.default_avatar.url)

                log_embed.add_field(
                    name="üë§ Usu√°rio", 
                    value=f"{interaction.user.mention}\n`{interaction.user.name}` (ID: `{interaction.user.id}`)", 
                    inline=False
                )

                log_embed.add_field(name="üìã Nome Completo", value=f"**`{self.nome.value}`**", inline=True)
                log_embed.add_field(name="üÜî ID", value=f"**`{self.id_usuario.value}`**", inline=True)
                log_embed.add_field(name="üìû Telefone", value=f"**`{self.telefone.value}`**", inline=True)

                log_embed.add_field(name="üè∑Ô∏è Tipo", value=f"**`{tipo_final}`**", inline=True)
                log_embed.add_field(name="üìù Apelido", value=f"**`{novo_apelido}`**", inline=True)
                log_embed.add_field(name="üéØ Cargo Atribu√≠do", value=f"**{cargo.mention}**", inline=True)

                log_embed.set_footer(text=f"Sistema de Verifica√ß√£o ‚Ä¢ {interaction.guild.name}")

                await canal_logs.send(embed=log_embed)

        except Exception as e:
            logger.error(f"Erro na verifica√ß√£o de {interaction.user.name}: {e}")
            await interaction.response.send_message("‚ùå Ocorreu um erro inesperado. Tente novamente.", ephemeral=True)


class VerificationView(discord.ui.View):
    """View com bot√£o para iniciar verifica√ß√£o"""

    def __init__(self):
        super().__init__(timeout=None)

    @discord.ui.button(label="Iniciar Verifica√ß√£o", style=discord.ButtonStyle.green, emoji="‚úÖ")
    async def start_verification(self, interaction: discord.Interaction, button: discord.ui.Button):
        """Inicia o processo de verifica√ß√£o"""
        modal = VerificationModal()
        await interaction.response.send_modal(modal)

# ==================== EXECU√á√ÉO ====================

import os
from dotenv import load_dotenv

async def main():
    """Fun√ß√£o principal para iniciar o bot"""
    try:
        # Carrega vari√°veis de ambiente do arquivo .env
        load_dotenv()
        TOKEN = os.getenv("DISCORD_TOKEN")

        if not TOKEN or TOKEN == "seu_token_aqui":
            logger.error("‚ùå Token do bot n√£o configurado! Crie um arquivo .env e adicione seu DISCORD_TOKEN.")
            return

        await bot.start(TOKEN)

    except discord.LoginFailure:
        logger.error("‚ùå Token inv√°lido! Verifique se o token no arquivo .env est√° correto.")
    except discord.HTTPException as e:
        logger.error(f"‚ùå Erro HTTP: {e}")
    except Exception as e:
        logger.error(f"‚ùå Erro inesperado: {e}")

if __name__ == "__main__":
    try:
        asyncio.run(main())
    except KeyboardInterrupt:
        logger.info("üõë Bot interrompido pelo usu√°rio")
    except Exception as e:
        logger.error(f"‚ùå Erro fatal: {e}")
    finally:
        print("Bot finalizado.")

@bot.command(name='consultar', aliases=['pontos_consultar'], help="Consulta seu hist√≥rico de tempo em chamadas.")
async def consultar_command(ctx, usuario: discord.Member = None):
    """Consulta o hist√≥rico de tempo em chamadas de um usu√°rio com pagina√ß√£o."""
    if usuario is None:
        usuario = ctx.author

    try:
        conn = sqlite3.connect(call_tracker.db_path)
        cursor = conn.cursor()

        cursor.execute('''
            SELECT id, user_id, user_name, canal, entrada, saida, duracao_segundos
            FROM call_sessions
            WHERE user_id = ?
            ORDER BY entrada DESC
        ''', (str(usuario.id),))

        sessoes = cursor.fetchall()
        conn.close()

        if not sessoes:
            embed = discord.Embed(
                title="‚öïÔ∏è Hist√≥rico de Atividade em Chamada ‚öïÔ∏è",
                description="N√£o h√° sess√µes de voz registradas para este usu√°rio.",
                color=discord.Color.dark_red()
            )
            embed.set_author(name=f"Relat√≥rio de: {usuario.display_name}", icon_url=usuario.avatar.url if usuario.avatar else usuario.default_avatar.url)
            await ctx.send(embed=embed)
            return

        view = PaginationView(author=ctx.author, all_sessoes=sessoes, usuario_alvo=usuario, items_per_page=5)

        initial_sessoes = view.get_page_data()
        initial_embed = build_pontos_embed(initial_sessoes, usuario, 1, view.total_pages)

        await ctx.send(embed=initial_embed, view=view)
        logger.info(f"Comando consultar executado por {ctx.author.name} para o usu√°rio {usuario.name}")

    except Exception as e:
        logger.error(f"Erro no comando consultar: {e}")
        await ctx.send("‚ùå Ocorreu um erro ao consultar o hist√≥rico.")
